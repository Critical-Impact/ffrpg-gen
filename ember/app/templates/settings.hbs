<form role="form">
    <div class="row">
        <div class="col-xs-12">
            <div class="form-group">
                <div class="form-group">
                    <label>New Password: </label>
                    {{input type="password" valueBinding="model.password" class="form-control"}}
                </div>
            </div>
            <div class="form-group">
                <input class="btn btn-default" {{ action changePassword target="controller" }} type="submit" value="Save"/>
            </div>
        </div>
    </div>
</form>